<% if @stop_name %>
    <p class="stopname"><%= @stop_name %></p>
<% end %>
<%= erb :indicator_table %>
<p class="back"><a href="/">Search again</a></p>

<script type="text/javascript" charset="utf-8">
  function poll() {
    promise.get(window.location.href + '/partial').then(function(err, text, xhr) {
      document.getElementById('indicator').outerHTML = text
      setTimeout(poll, 15000)
    })
  }

  document.addEventListener("DOMContentLoaded", function(event) {
    poll()
  })
</script>
